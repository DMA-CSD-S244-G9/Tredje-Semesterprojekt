@model InfiniteInfluence.Website.Models.InfluencerCreateViewModel

@{
    ViewData["Title"] = "Create Influencer";
}

<h1>Create Influencer</h1>
<h4>Influencer</h4>
<hr />
<div class="row">
    <div class="col-md-4">

@*         <form asp-action="Create"> *@
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="LoginEmail" class="form-label"></label>
                <input asp-for="LoginEmail" class="form-control" />
                <span asp-validation-for="LoginEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProfileImageUrl" class="form-label"></label>
                <input asp-for="ProfileImageUrl" class="form-control" />
                <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" asp-items="Model.GenderOptions" class="form-control"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InfluencerState" class="form-label"></label>
                <input asp-for="InfluencerState" class="form-control" />
                <span asp-validation-for="InfluencerState" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InfluencerLanguage" class="form-label"></label>
                <input asp-for="InfluencerLanguage" class="form-control" />
                <span asp-validation-for="InfluencerLanguage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Biography" class="form-label"></label>
                <textarea asp-for="Biography" class="form-control large-textarea" maxlength="1000" rows="12"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContactPhoneNumber" class="form-label"></label>
                <input asp-for="ContactPhoneNumber" class="form-control" />
                <span asp-validation-for="ContactPhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContactEmailAddress" class="form-label"></label>
                <input asp-for="ContactEmailAddress" class="form-control" />
                <span asp-validation-for="ContactEmailAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Domain1" class="form-label"></label>
                <input asp-for="Domain1" class="form-control" maxlength="20" />
                <span asp-validation-for="Domain1" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Domain2" class="form-label"></label>
                <input asp-for="Domain2" class="form-control" maxlength="20" />
                <span asp-validation-for="Domain2" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Domain3" class="form-label"></label>
                <input asp-for="Domain3" class="form-control" maxlength="20" />
                <span asp-validation-for="Domain3" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
               @*  <button type="submit" class="btn btn-primary">Create</button> *@
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}