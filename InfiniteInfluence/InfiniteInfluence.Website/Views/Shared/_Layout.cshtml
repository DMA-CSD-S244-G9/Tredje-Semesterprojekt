<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfiniteInfluence.Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons used for the nav bar top right elements -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfiniteInfluence.Website.styles.css" asp-append-version="true" />
</head>


@* viewdata["BodyClass"]- Makes the footer only be sticky on the front pages *@
<body class="@(ViewData["BodyClass"] ?? "")">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark-purple box-shadow">
            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-controller="Announcement" asp-action="Index">
                    <img src="~/img/logo_liggene_white_v01.png" asp-append-version="true" alt="Infinite Influence logo" width="150" />
                </a>

                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- left side containing normal textlinks -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Announcement" asp-action="Index">Announcements</a>
                        </li>
                    </ul>



                    <!-- Right side of the navigation bar for icons -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Company icon -->
                        <li class="nav-item">
                            <a class="nav-link nav-icon-link"
                               asp-area=""
                               asp-controller="Company"
                               asp-action="Edit">
                                <i class="bi bi-building"></i>
                            </a>
                        </li>

                        <!-- Influencer icon -->
                        <li class="nav-item">
                            <a class="nav-link nav-icon-link"
                               asp-area=""
                               asp-controller="Influencer"
                               asp-action="FindProfile">
                                <i class="bi bi-person-circle"></i>
                            </a>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
    </header>

    @* This is our box that will appear and contain the tempdata messages when actions are performed such as create, delete and so on *@
    @await Html.PartialAsync("_Notifications")
    
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="footer text-muted site-footer">
        <div>
            <div class="container-footer row">
                <div class="col-6 col-md">
                    <h5 class="footer-heading">Company</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="footer-link" href="#">About us</a></li>
                        <li><a class="footer-link" href="#">Our Team</a></li>
                        <li><a class="footer-link" href="#">Careers</a></li>
                        <li><a class="footer-link" href="#">Press</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5 class="footer-heading">Legal</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="footer-link" href="#">Cookie Policy</a></li>
                        <li><a class="footer-link" href="/home/privacy">Privacy Policy</a></a></li>
                        <li><a class="footer-link" href="#">Terms of Service</a></li>
                        <li><a class="footer-link" href="#">GDPR Guidelines</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5 class="footer-heading">Support</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="footer-link" href="#">Help Center</a></li>
                        <li><a class="footer-link" href="#">Documentation</a></li>
                        <li><a class="footer-link" href="#">Community</a></li>
                        <li><a class="footer-link" href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5 class="footer-heading">Contact</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="footer-link" href="#">Get In Touch</a></li>
                        <li><a class="footer-link" href="#">Partners</a></li>
                        <li><a class="footer-link" href="#">Media</a></li>
                        <li><a class="footer-link" href="#">Sales</a></li>
                    </ul>
                </div>


            </div>
            <div class="border-top">
                <div class="container-footer container-copyright">
                    &copy; 2025 - Infinite Influencer
                </div>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>