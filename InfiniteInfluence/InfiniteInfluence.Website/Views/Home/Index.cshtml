@{
    @* Makes the footer only be sticky on the front pages *@
    ViewData["BodyClass"] = "home-footer";


    ViewData["Title"] = "Home Page";
}



<div class="container-hero">
    <div class="container-hero-div row flex-lg-row-reverse align-items-center g-5 ">
        
     
        <div class="col-10 col-sm-8 col-lg-right bg-star-login">
            <div class="form-signin text-center align-content-center">
                <form class="container-login bg-dark-purple">
                    <h2 class="h5 fw-bold mb-3 fw-normal">Welcome back!</h2>
                    <p class="txt-gray">We missed you please enter your details</p>
                    
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput" class=" txt-gray">Email address</label>
                    </div>
                    
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword" class=" txt-gray">Password</label>
                    </div>

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>
                    <button class="w-100 btn btn-lg btn-primary mb-2" type="submit">Sign in</button>
                    <button class="w-100 btn btn-lg btn-secondary" type="submit">Sign up</button>
                </form>
            </div>
        </div>
        
        <div class="container-hero-padding col-lg-left">
            <h1 class="display-5 lh-1 mb-3">Influencer & Brand collaboration - infinitely easier!</h1>
            <p class="lead">
                By signing up you will be able to connect with sponsors of brands world wide looking for collaborators to promote their products.
            </p>
        </div>

    </div>
</div>

