@{
    ViewData["Title"] = "Choose Your Profile Type";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-12 text-center">

            <!-- Heading -->
            <h1 class="display-4 mb-4">Choose Your Profile Type</h1>

            
            <!-- Introduction Text -->
            <p class="lead mb-5">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
                incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
            </p>


            <!-- Moves the buttons using flexbox so that they are next to each other -->
            <div class="d-flex flex-column flex-md-row justify-content-center gap-3">

                <!-- Button for Influencers -->
                <div class="text-center mb-4">
                    <a asp-controller="Influencer" asp-action="Create"
                       class="btn btn-primary px-5 py-2 d-inline-block text-decoration-none">
                        I am an Influencer
                    </a>
                </div>

                <!-- Button for company / brand -->
                <div class="text-center mb-4">
                    <a asp-controller="Company" asp-action="Create"
                       class="btn btn-primary px-5 py-2 d-inline-block text-decoration-none">
                        I am a Company
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
